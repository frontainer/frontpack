{
  "extends": "stylelint-config-standard",
  "rules": {
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "font-smoothing"
        ]
      }
    ],
    "declaration-empty-line-before": "never",
    "rule-empty-line-before": [
      "always", {
        "ignore": [
          "inside-block",
          "after-comment"
        ]
      }
    ]
  }
}